page {
    height: 100%;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333;
}
/* 全局样式 */
view, scroll-view, text, input, textarea {
    box-sizing: border-box;
    word-break: break-all;
    font-size: 30rpx;
    color: #333;
}
image {
  display: block;
}
.md_margin {
    margin: 0 32rpx;
}
.md_padding {
    padding: 0 32rpx;
}
.text_ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.text_ellipsis2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.text_ellipsis3 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.medo_color_primary {
    color: #FF2C7D;
}
.medo_bgcolor_primary {
    background-color: #FF2C7D;
}
.flex_center {
    display: flex;
    justify-content: center; align-items: center;
}
.nomore{
    display: flex; flex-direction: row; align-items: center; justify-content: center;
    height: 30rpx; line-height: 30rpx;
    margin-top: 32rpx; padding-bottom: 60rpx;
    text-align: center;
    font-size: 24rpx; color: #999;
    box-sizing: content-box;
}
.nomore text {
    display: inline-block;
    width: 32rpx; height: 2rpx;
    margin: 0 6rpx;
    line-height: 30rpx; vertical-align: middle;
    background-color: #999;
}
button::after{
    content: none;
}
.md_title {
    width: 100%; height: 40rpx !important;
    text-align: center;
}
.md_title>text:before {
    display: inline-block;
    position: relative;
    top: -6rpx; right: 30rpx;
    content: '';
    width: 35%; height: 0;
    border: 1rpx solid #eee;
}
.md_title>text:after {
    display: inline-block;
    position: relative;
    top: -6rpx; left: 30rpx;
    content: '';
    width: 35%; height: 0;
    border: 1rpx solid #eee;
}
.md_tag {
    padding: 0 10rpx; margin: 26rpx 14rpx 0 0;
    height: 30rpx; min-width: 60rpx;
    line-height: 30rpx; vertical-align: middle;
    font-size: 20rpx; color: #ff2c79;
    border: 1px solid #ff2c79;
    border-radius: 6rpx;
}
.md_titlename {
    display: -webkit-box;
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;
    -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-clamp: 2;
}
.md_titlename_3 {
    display: -webkit-box; word-break: break-all; 
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;
    -webkit-line-clamp: 3; -webkit-box-orient: vertical; line-clamp: 3;
}
.md_titlename_1 {
    display: -webkit-box; word-break: break-all; 
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;
    -webkit-line-clamp: 1; -webkit-box-orient: vertical; line-clamp: 1;
}
.color-gray {
    color: #999;
}

