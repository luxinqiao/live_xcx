page {
    background-color: #FAFAFA;
}
.md_margin_order{
    margin: 0 24rpx;
}
.message {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx; color: #F86E21;
    background-color: #FEFCEC;
}
.info {
    position: relative;
    padding-top: 32rpx;
    height: 334rpx;
    background-color: #fff;
}
.info>view:nth-child(1) {
    position: relative;
    width: 702rpx; height: 196rpx;
}
.info>view:nth-child(1)>image {
    position: absolute;
    top: 0; left: 0;
    width: 168rpx; height: 168rpx;
    border-radius: 8rpx;
}
.info>view:nth-child(1)>view:nth-of-type(1) {
    display: -webkit-box;
    position: absolute;
    top: -8rpx; right: 0;
    max-height: 80rx; width: 510rpx;
    line-height: 40rpx;
    font-size: 32rpx; word-break: break-all; 
    text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;
    -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-clamp: 2;
}
.info .isSelect {
    padding: 0 14rpx; margin: 26rpx 14rpx 0 0;
    height: 30rpx; min-width: 60rpx;
    line-height: 30rpx; vertical-align: middle;
    font-size: 20rpx; border-radius: 6rpx;
}

.info .size {
    position: absolute;
    top: 60rpx; 
    left: 248rpx;
    font-size: 26rpx;
}

.info>view:nth-child(1)>view:nth-of-type(1)>text:nth-child(2) {
    line-height: 40rpx;
    font-size: 28rpx;
}
.info>view:nth-child(1)>view:nth-of-type(2) {
    position: absolute;
    bottom: 40rpx; right: 0;
    width: 510rpx;
}
.info>view:nth-child(1)>view:nth-of-type(2)>text:nth-child(1) {
    font-size: 32rpx; font-weight: bold;
}
.info>view:nth-child(1)>view:nth-of-type(2)>text:nth-child(2) {
    font-size: 32rpx; font-weight: bold;
}
.coupon {
    position: relative;
    height: 98rpx; line-height: 98rpx;
    border-top: 1px solid #f8f8f8;
    background-color: #fff;
}
.coupon>text:nth-child(1) {
    position: absolute;
    top: 0; bottom: 0; left: 0;
    margin: auto;
    font-size: 28rpx;
}
.coupon>text:nth-child(2) {
    position: absolute;
    top: 0; bottom: 0; right: 28rpx;
    margin: auto;
    font-size: 26rpx; color: #bfbfbf;
}
.coupon>image:last-child {
    position: absolute;
    top: 0; bottom: 0; right: 0;
    margin: auto;
    width: 18rpx; height: 18rpx;
}
.coupon>text.act {
    color: #ee5e8e;
}
.btn {
    position: fixed;
    bottom: 0; left: 0;
    width: 100%; height: 120rpx;
    line-height: 120rpx;
    border-top: 1px solid #f7f7f7;
    background-color: #fff;
}
.btn>view:nth-child(1) {
    position: relative;
}
.btn>view:nth-child(1)>text:nth-child(1) {
    position: absolute;
    top: 0; bottom: 0; left: 32rpx;
    margin: auto;
    font-size: 28rpx; 
}
.btn>view:nth-child(1)>text:nth-child(2) {
    margin-left: 140rpx;
    font-size: 24rpx; 
    color: #FF2C79;
}
.btn>view:nth-child(1)>text:nth-child(3) {
    font-size: 56rpx; font-weight: bold;
    color: #FF2C79;
}
.btn>view:nth-child(2) {
    position: absolute;
    top: 0; bottom: 0; right: 32rpx;
    margin: auto;
    width: 168rpx; height: 60rpx;
    text-align: center; line-height: 60rpx;
    font-size: 28rpx; color: #fff;
    border-radius: 30rpx;
    background-color: #FF2C79;
}