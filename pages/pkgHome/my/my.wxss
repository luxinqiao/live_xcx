.table {
    position: relative;
    margin: 0 24rpx 24rpx 24rpx;
    border-radius: 8rpx;
    background-color: #fff;
}
.table_menu {
    margin-top: -100rpx;
}
.table_tit {
    position: relative;
    padding: 32rpx 0 0 28rpx;
    line-height: 42rpx;
    font-size: 30rpx; font-weight: bold;
}
.table_box {
    position: relative;
    height: 176rpx;
}
.table_item {
    position: relative;
    margin-top: 36rpx;
    height: 108rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.table_item>image:nth-of-type(1) {
    position: absolute;
    top: 0; left: 0; right: 0;
    margin: auto;
    width: 62rpx; height: 56rpx;
}
.table_item>text {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    text-align: center; line-height: 26rpx;
    font-size: 26rpx;
}
.table_menu {
    margin-top: -100rpx;
}

/* 服务推荐 */
.service_box {
    position: relative;
    padding: 0 24rpx 32rpx 24rpx;
}
.service_item {
    position: relative;
    display: inline-block;
    margin-top: 24rpx;
    height: 108rpx; width: 312rpx;
    border-radius: 12rpx;
    background-color: rgba(185, 224, 255, 0.14);
}
.service_item>image {
    position: absolute;
    top: 0; bottom: 0; left: 16rpx;
    margin: auto;
    width: 56rpx; height: 56rpx;
}
.service_item_tit {
    position: absolute;
    top: 20rpx; left: 84rpx;
    line-height: 36rpx;
    font-size: 26rpx;
}
.service_item_desc {
    position: absolute;
    top: 56rpx; left: 84rpx;
    line-height: 32rpx;
    font-size: 22rpx; color: #999;
}
.service_item_kegel {
    margin-left: 26rpx;
    background-color: rgba(255, 158, 205, 0.07);
}
.service_item_mall {
    background-color: rgba(255, 182, 167, 0.1);
}

/** ***************** 竖状菜单栏 ******************** */
.list_box {
    position: relative;
    padding-left: 30rpx;
    border-radius: 8rpx; margin: 0 24rpx;
    background-color: #fff;
}
.list_item {
    position: relative;
    height: 100rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #f4f4f4;
}
.list_item>text {
    float: left;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}
.phone_tag {
    margin: 0 8rpx;
    color: #888;
}
.list_item>image {
    position: absolute;
    top: 0; bottom: 0; right: 22rpx;
    margin: auto;
    width: 14rpx; height: 20rpx;
}

.page_bottom {
    position: fixed;
    bottom: 0; left: 0;
    width: 100%; height: 24rpx;
    z-index: 20;
    background:linear-gradient(to top,rgba(102, 102, 102, 0.06) 0%,rgba(255,255,255,0) 24rpx);
}