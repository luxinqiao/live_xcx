#main {
    position: relative;
    padding-bottom: 36rpx;
}
.top {
    position: relative;
    height: 302rpx; width: 100%;
    background: linear-gradient(0deg, #FCFCFC 0%, #FE7490 32%, #FF5074 100%);
}

.no_login {
    height: 176rpx;
}
.no_login>image:nth-child(1) {
    position: absolute;
    top: 36rpx; left: 32rpx;
    height: 120rpx; width: 120rpx;
    border-radius: 50%;
}
.no_login>text:nth-child(2) {
    position: absolute;
    top: 56rpx; left: 168rpx;
