/** ***************** 登录top(已实名认证) ******************** */
.haslogin {
    height: 176rpx;
}

.haslogin>image:nth-child(1) {
    position: absolute;
    top: 36rpx; left: 32rpx;
    height: 108rpx; width: 108rpx;
    border-radius: 50%;
}

.haslogin>view>.text_ellipsis {
    display: flex; flex-direction: row; align-items: center;
    position: absolute;
    top: 46rpx; left: 168rpx;
}
.haslogin>view>.text_ellipsis text{
    display: inline-block;
    font-size: 36rpx; line-height: 50rpx;
    font-weight: bold; max-width: 360rpx;
    color: rgba(255, 255, 255, 1);
}
.haslogin>view>.text_ellipsis .vipImage{
   height: 32rpx; width: 56rpx; margin-left: 16rpx;
}
.haslogin>image:nth-of-type(2) {
    position: absolute;
    top: 56rpx; right: 56rpx;
    height: 56rpx; width: 56rpx;
}

.haslogin>.redCircle {
    position: absolute;
    top: 64rpx; right: 66rpx;
    height: 10rpx; width: 10rpx;
    background-color: red;
    border-radius: 50%;
}

.haslogin>.real {
    position: absolute;
    top: 106rpx; left: 168rpx;
    font-size: 20rpx;
    color: rgba(255, 255, 255, 1);
    border: 1px solid rgba(255, 255, 255, 0.39);
    height: 30rpx;
    line-height: 26rpx;
    padding: 0 8rpx;
    text-align: center;
    border-radius: 15rpx;
}

.haslogin>.goAuthentication {
    position: absolute;
    top: 56rpx;
    right: 32rpx;
    width: 128rpx;
    height: 56rpx;

}    

