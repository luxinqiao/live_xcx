.content {
    border-top: 2rpx soild rgba(242,242,242,1);
}

/** ************ 失败原因 ************* */
.header {
    padding: 22rpx 32rpx;
    background: rgba(253,252,236,1);
}

.header>view {
    font-size: 28rpx;
    color: rgba(248,110,33,1);
    line-height: 40rpx;
}

/** ********** 姓名、身份证号 *********** */
.inputBox {
    padding: 28rpx 32rpx;
    background-color: white;
}
.inputBox>view {
    line-height: 44rpx;
}

.name {
    display: flex;
}

.name>text {
    display: inline-block;
    width: 192rpx;
    font-size: 32rpx;
}

.name>input {
    font-size: 32rpx;
}

.card {
    margin-top: 56rpx;
    display: flex;
}

.card>text {
    display: inline-block;
    width: 192rpx;
    font-size: 32rpx;
}

.card>input {
    font-size: 32rpx;
}

/** ********** 灰色分割线 *********** */
.division {
    height: 24rpx;
    background-color: #fafafa;
}

/** ********** 资料上传 *********** */
.upload {
    padding: 32rpx;
}

.uploadTitle {
    font-size: 28rpx;
}

.uploadSubTitle {
    margin-top: 16rpx;
}

.uploadSubTitle>text:nth-child(1) {
    color: red;
    font-size: 26rpx;
}

.uploadSubTitle>text:nth-child(2) {
    font-size: 26rpx;
    color:#999999;
}

.uploadImg {
    margin-top: 48rpx;
    display: flex;
    justify-content: space-between;
}

.uploadImg>image {
    width: 334rpx;
    height: 200rpx;
}

/** ********** 提交认证 *********** */
.submitBtn {
    margin-top: 80rpx;
    width: 686rpx;
    height: 100rpx;
    background-color: rgba(255,44,121,1);
    border-radius: 50rpx;
    font-size: 32rpx;
    color: white;
    line-height: 100rpx;
}

