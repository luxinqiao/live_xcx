page {
    border-top: 2rpx solid rgba(242,242,242,1);
    background-color: rgba(250,250,250,1);
}

.content {
    position: relative;
}

.list {
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
}

.header {
    height: 120rpx;
    line-height: 120rpx;
}

.list>text:nth-child(1) {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 40rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.list>image:last-child {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 40rpx;
    margin: auto;
    width: 12rpx;
    height: 18rpx;
}

.list>image.img {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 280rpx;
    margin: auto;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.list>input:nth-child(2) {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 272rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.list>.nicknameInput {
    width: 450rpx;
}

.height, .weight {
    width: 220rpx;
}

.list>text:nth-child(2) {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 272rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.list>text:nth-child(3) {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 510rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.content>view:last-child {
    margin-bottom: 24rpx;
}

.interval {
    margin-top: 24rpx;
}

.listArea {
    position: relative;
    min-height: 130rpx;
    line-height: 100rpx;
    background-color: #fff;
}

.listArea>text:nth-child(1) {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 40rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.listArea>image:last-child {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 40rpx;
    margin: auto;
    width: 12rpx;
    height: 18rpx;
}

.listArea>image.img {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 76rpx;
    margin: auto;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.listArea>text:nth-child(2) {
    word-wrap: break-word;
    line-height: 50rpx;
    position: absolute;
    top: 20rpx;
    bottom: 0;
    left: 280rpx;
    right: 76rpx;
    margin: auto;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

/** ************ 个性签名、个人简介需要显示全部文字,单独处理 ************* */
.introduction, .signature, .position{
    display: flex;
    padding: 28rpx 0 28rpx 0;
    min-height: 65rpx;
    background-color: #fff;
}

.introduction>text:nth-child(1), .signature>text:nth-child(1), .position>text:nth-child(1) {
    word-break: keep-all;
    margin-left: 40rpx;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.introduction>text:nth-child(2), .signature>text:nth-child(2), .position>text:nth-child(2) {
    word-wrap: break-word;
    width: 390rpx;
    line-height: 50rpx;
    margin: auto 0 auto 102rpx;
    font-size: 32rpx;
    color:rgba(0,0,0,1);
}

.position>text:nth-child(2) {
    margin-left: 166rpx;
}

.introduction>image, .signature>image, .position>image {
    margin: auto;
    width: 12rpx;
    height: 18rpx;
}