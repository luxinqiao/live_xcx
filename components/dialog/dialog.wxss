.md_dialog {
    display: flex;
    flex-direction: row;
    justify-content: center; align-items: center;
    position: fixed;
    z-index: 99;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: transparent;
}

.shade {
    background-color: rgba(0, 0, 0, 0.6);
}

.md_dialog>.tip {
    padding: 18rpx 47rpx;
    min-width: 300rpx; max-width: 80%;
    text-align: center;
    border-radius: 8rpx;
    background-color: rgba(0, 0, 0, 0.8);
}
.md_dialog>.tip>view {
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
}
.md_dialog>.tip>view>text {
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}

.md_dialog>.waiting {
    padding: 24rpx 50rpx;
    min-width: 300rpx; max-width: 80%;
    text-align: center;
    border-radius: 50rpx
}
.md_dialog>.waiting>view {
    display: flex;
    flex-direction: column; align-items: center;
    border-radius: 10rpx;
}
.md_dialog>.waiting>view>image {
    width: 80rpx; height: 80rpx;
    margin-bottom: 12rpx;
}
.md_dialog>.waiting>view>text {
    display: inline-block;
    text-align: left; font-size: 26rpx;
    color: #fff;
}

.md_dialog>.alert {
    display: flex;
    flex-direction: column;
    width: 540rpx;
    border-radius: 10rpx;
    background-color: #fff;
}
.md_dialog>.alert>.content {
    display: flex; align-items: center;
    justify-content: center;
    width: 540rpx; min-height: 170rpx;
    padding: 40rpx 40rpx;
    text-align: center; line-height: 52rpx;
    font-size: 32rpx;
}
.md_dialog>.alert>.content>text {
    display: inline-block;
    text-align: left;
}
.md_dialog>.alert>.button {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #ff2c79;
    border-top: 1rpx solid #eee;
}

.md_dialog>.alertCount {
    display: flex;
    flex-direction: column;
    width: 540rpx;
    border-radius: 10rpx;
    background-color: #fff;
}
.md_dialog>.alertCount>.content {
    width: 540rpx;
    min-height: 170rpx;
    padding: 40rpx 40rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 32rpx;
}
.md_dialog>.alertCount>.content>text {
    display: inline-block;
    text-align: left;
}
.md_dialog>.alertCount>.button {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #ff2c79;
    border-top: 1rpx solid #eee;
}

.md_dialog>.confirm {
    display: flex;
    flex-direction: column;
    width: 540rpx;
    border-radius: 10rpx;
    background-color: #fff;
}
.md_dialog>.confirm>.content {
    width: 540rpx;
    min-height: 170rpx;
    padding: 40rpx 40rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 32rpx;
}
.md_dialog>.confirm>.content>text {
    display: inline-block;
    text-align: left;
}
.md_dialog>.confirm>.button {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #ff2c79;
}
.md_dialog>.confirm>.button>text:nth-child(1) {
    float: left;
    width: 50%;
    height: 100rpx;
    font-size: 34rpx;
    border-top: 1px solid #eee;
    border-bottom-left-radius: 10rpx;
    background-color: white;
}
.md_dialog>.confirm>.button>text:nth-child(2) {
    float: right;
    width: 50%;
    height: 100rpx;
    font-size: 34rpx;
    border-top: 1px solid #eee;
    border-left: 1px solid #eee;
    border-bottom-right-radius: 10rpx;
    color: #ff2c79;
    background-color: white;
}

.md_dialog>.contentBox{
    margin: auto;
    width: 670rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

.md_dialog>.customize {
    margin: auto;
    border-radius: 16rpx;
    background-color: #fff;
}

.md_dialog>.contentBox>.title {
    display: block;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.loading {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 270rpx;
    height: 270rpx;
}

.loading>image {
    width: 200rpx;
    height: 200rpx;
}

.loading>view {
    margin-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
}

.md_dialog>.inputBox {
    margin: auto;
    width: 670rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

/** ************** input输入框弹框 ***************** */
.md_dialog>.inputBox>.title {
    display: block;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.md_dialog>.inputBox>.button {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}

.md_dialog>.inputBox>.button>text:nth-child(1) {
    float: left;
    width: 50%;
    height: 100rpx;
    font-size: 34rpx;
    border-top: 1px solid #eee;
    border-bottom-left-radius: 10rpx;
    background-color: white;
}

.md_dialog>.inputBox>.button>text:nth-child(2) {
    float: right;
    width: 50%;
    height: 100rpx;
    font-size: 34rpx;
    border-top: 1px solid #eee;
    border-left: 1px solid #eee;
    border-bottom-right-radius: 10rpx;
    color: #ff2c79;
    background-color: white;
}